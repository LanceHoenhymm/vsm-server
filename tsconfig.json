{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/services/*"],
      "@models/*": ["src/models/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@errors/*": ["src/errors/*"],
      "@controllers/*": ["src/controllers/*"],
      "@game/*": ["src/game/*"],
      "@common/*": ["src/common/*"],
      "@/*": ["src/*"]
    }
  "exclude": ["node_modules", "dist", "old"]
}
